<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nils.rhymetime">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/rt_new_app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlayOverviewActivity"
            android:label="STAGES" />
        <activity
            android:name=".PlayActivity"
            android:label="PLAY"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".InstructionsActivity"
            android:label="INSTRUCTIONS" />
        <activity
            android:name=".AchievementsActivity"
            android:label="ACHIEVEMENTS" />
        <activity
            android:name=".ScoreOverviewActivity"
            android:label="LEADERBOARD"></activity>
        <activity android:name=".SignInActivity"></activity>
    </application>

</manifest>